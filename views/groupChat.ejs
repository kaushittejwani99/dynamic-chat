<%- include('layouts/header.ejs') %>
<h2 class="mb-4">Group Chatting</h2>
<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <% if (myGroups.length > 0) { %>
                <% myGroups.forEach(group => { %>
                    <li class="list-group-item list-group-item-dark cursor-pointer group-list" data-id="<%= group._id %>">
                        <img src="<%= group.image %>" alt="" width="50px" height="50px">
                        <%= group.name %>
                    </li>
                <% }); %>
            <% } %>



            <!-- joined group -->

            <% if (JoinedGroups.length > 0) { %>
            
                <% JoinedGroups.forEach(joinGroup => { %>
                    <li class="list-group-item list-group-item-dark cursor-pointer group-list" data-id="<%= joinGroup.group_id._id %>">
                        <img src="<%= joinGroup.group_id.image %>" alt="" width="50px" height="50px">
                        <%= joinGroup.group_id.name %>
                    </li>
                <% }); %>
            <% } %>
        </ul>
    </div>
    <div class="col-md-9">
        <h3 class="group-start-head">Click to start the chat</h3>
        <div class="group-chat-section" style="display:none;">
            <div id="group-chat-container"></div>
            <form id="group-chat-form">
                <input type="text" name="message" placeholder="Enter message" class="border" id="group-message" required>
                <input type="submit" value="Send" class="btn btn-primary">
            </form>
        </div>
    </div>
</div>

<!-- delete group chat message model -->
<div class="modal fade" id="deleteGroupChatModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Chat</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="deleteGroup-chat-form">
                <div class="modal-body">
                    <input type="hidden" name="id" id="deleteGroup-message-id">
                    <p>Are you sure you want to delete this  message?</p>
                    <p><b id="delete-group-message"></b></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- update model -->

<div class="modal fade" id="groupUpdateChatModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Chat</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="group-update-chat-form">
                <div class="modal-body">
                    <input type="hidden" name="id" id="group-update-message-id">
                    <input type="text" name="message" id="group-update-message" required placeholder="Enter message">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('layouts/footer.ejs') %>

