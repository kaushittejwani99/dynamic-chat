<%- include('layouts/header.ejs') %>
<h2 class="mb-4">Hi, <%= user.name %></h2>
<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <% if (userList.length > 0) { %>
                <% userList.forEach(user => { %>
                    <li class="list-group-item list-group-item-dark cursor-pointer user-list" data-id="<%= user._id %>">
                        <img src="<%= user.image %>" alt="" width="50px" height="50px">
                        <%= user.name %>
                        <% if (user.is_online) { %>
                            <sup class="online-status" id="<%= user._id %>--status">online</sup>
                        <% } else { %>
                            <sup class="offline-status" id="<%= user._id %>--status">offline</sup>
                        <% } %>
                    </li>
                <% }); %>
            <% } %>
        </ul>
    </div>
    <div class="col-md-9">
        <h3 class="start-head">Click to start the chat</h3>
        <div class="chat-section" style="display:none;">
            <div id="chat-container"></div>
            <form id="chat-form">
                <input type="text" name="message" placeholder="Enter message" class="border" id="message" required>
                <input type="submit" value="Send" class="btn btn-primary">
            </form>
        </div>
    </div>
</div>

<!-- Modals for Delete and Update -->
<div class="modal fade" id="deleteChatModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Chat</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="delete-chat-form">
                <div class="modal-body">
                    <input type="hidden" name="id" id="delete-message-id">
                    <p>Are you sure you want to delete this message?</p>
                    <p><b id="delete-message"></b></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="updateChatModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Chat</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="update-chat-form">
                <div class="modal-body">
                    <input type="hidden" name="id" id="update-message-id">
                    <input type="text" name="message" id="update-message" required placeholder="Enter message">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('layouts/footer.ejs') %>
