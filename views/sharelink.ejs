<%- include('layouts/header.ejs') %>

<img src="/<%= group.image %>" width="200px" height="200px" alt="Group Image">
<h2><%= group.name %></h2>
<h2>Total members in group: <%= totalMembers %></h2>

<% if (available != 0) { %>
    <h3>Available for <%= parseInt(available) %></h3>
<% } %>

<% if (isOwner) { %>
    <p>You are the creator of this group, so you can't join this group.</p>
<% } else if (isJoined > 0) { %>
    <p>You already joined this group.</p>
<% } else if (available == 0) { %>
    <p>The group is already full.</p>
<% } else { %>
    <button class="btn btn-primary join-group" data-id="<%=group._id%>">Join</button>
<% } %>

<%- include('layouts/footer.ejs') %>
